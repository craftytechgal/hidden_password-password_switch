<script>
// just for the demos, avoids form submit
jQuery.validator.setDefaults({
  debug: true,
  success: "valid"
});
$( "#myform" ).validate({
  rules: {
    password: {
      required: true,
      minlength: 8,
    },
    password_again: {
      equalTo: "#password",
      required: true,
      minlength: 8,
    },
  }
});
</script>

 
